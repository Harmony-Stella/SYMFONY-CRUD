
{% extends 'base.html.twig' %}

{% block title %}Ajout d'une transaction


{% endblock %}
{% block body %}

  <h2 style="text-transform: uppercase; text-align: center;">Ajout d'une transaction</h2>

<a href="{{url('app_transactions')}}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
<div class="form-horizontal offset-md-3">
	{{ form_start(form) }}
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="expediteur">Expediteur :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.expediteur, {'attr': {'class': 'form-control','type':'text', placeholder:'Le nom de expediteur'}}) }}
			</div>
		</div>
        <div class=" form-group ">
			<label class="control-label col-sm-2 " for="receveur">Receveur :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.receveur, {'attr': {'class': 'form-control','type':'text', placeholder:'Le nom du receveur'}}) }}
			</div>
		</div>
		<div class="form-group ">
			<label class="control-label col-sm-2 " for="typeTransaction">Type de la transaction :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.typeTransaction, {'attr': {'class': 'form-control','type':'text', placeholder:'Type de la transaction'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="montant">Montant de la transaction :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.montant, {'attr': {'class': 'form-control','type':'text', placeholder:'Montant de la transaction'}}) }}
			</div>
		</div>
		<div class=" form-group ">
			<label class="control-label col-sm-2 " for="dateTransaction">Date de la transaction :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.dateTransaction, {'attr': {'class': 'form-control','type':'dateTime'}}) }}
			</div>
		</div>
        <div class=" form-group ">
			<label class="control-label col-sm-2 " for="statut">Statut de la transaction :</label>
			<div class="col-sm-10 ">
				{{form_widget(form.statutTransaction, {'attr': {'class': 'form-control','type':'text', placeholder:'statut'}}) }}
			</div>
		</div>
		<div class="form-group button mb-3">
			<div class="col-sm-offset-2 col-sm-10 ">
				<button type="submit" name="ajouter" class="btn btn-primary mr-2">Ajouter</button>
			</div>
		</div>
	{{ form_end(form) }}
</div>

{% endblock %}